{
    "coc.source.emoji.enable": true,
    "coc.source.emoji.filetypes": ["markdown", "vimwiki"],
    "eslint.autoFixOnSave": true,
    "eslint.run": "onSave",
    "eslint.filetypes": [
        "javascript",
        "typescript",
        "typescriptreact",
        "javascriptreact"
    ],
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        }
    },
    "python.analysis.diagnosticEnabled": false,
    "snippets.userSnippetsDirectory": "~/.vim/snippets",
    "yaml.format.enable": true
}
